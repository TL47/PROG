package pack;

import java.util.*;

public class examenT5 {
	
	// Ejercicio 1
	
	static int[] rotarIzqda(int[] vector, int n) {
		int[] nuevo = new int [vector.length];
		for(int i = 0; i < nuevo.length - 1; i--) {
			nuevo[i] = nuevo[i] - n;
		}
		nuevo[0] = vector[3];
		nuevo[1] = vector[4];
		return nuevo;
	}
	
	

	public static void main(String[] args) {
		// Ejercicio 1		
		int[] vector = {1,2,3,4,5};
		int n = 2;
		int[] resultado = rotarIzqda(vector,n);
		//System.out.println(Arrays.toString(resultado));
		
		// Ejercicio 2
		
		Scanner sc = new Scanner(System.in);
		System.out.println("Dime un número que represente la cantidad de días");
		int d = sc.nextInt();
		int[] array = new int[n];
		for(int i = 0; i < array.length; i++) {
			System.out.println("Introduce la venta del día" + i);
			array[i] = sc.nextInt();
		}
		
		int contL = 0;
		for(int i = 0; i < array.length; i++) {
			if(array[i] < array[i + i]) {
				contL++;
			}
		}
		
		int[] mayorL = Arrays.copyOf(array, contL);

	}

}
