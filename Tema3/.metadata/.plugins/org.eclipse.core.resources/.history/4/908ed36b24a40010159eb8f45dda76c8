package pack;

import java.util.*;

public class piramideVacia_T3 {

	public static void main(String[] args) {
		// Pirámide Vacía
		
		Scanner sc = new Scanner(System.in);
		int n;
		System.out.println("Introduce un número para la base y la altura de la pirámide: ");
		n = sc.nextInt();
		for (int i = 1; i <= n; i++) {
			for (int j = 1; j <= n; j++) {
				System.out.print(" ");
			}
			for (int k = 1; k <= i * 2 - 1; k++) {
				if (i == 1 ) {
					System.out.print("*");
				} else {
					System.out.print(" ");
				}
				
			}
			System.out.println();
		}
	}

}
